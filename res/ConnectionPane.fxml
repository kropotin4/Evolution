<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<fx:root prefHeight="400.0" prefWidth="600.0" type="javafx.scene.layout.AnchorPane" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <VBox alignment="TOP_CENTER" prefHeight="200.0" prefWidth="100.0" spacing="5.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <Label text="Эволюция" textFill="#426f1d" wrapText="true">
               <font>
                  <Font name="Arial Black" size="40.0" />
               </font>
            </Label>
            <VBox alignment="TOP_CENTER" fillWidth="false" prefHeight="100.0" prefWidth="100.0" style="-fx-border-width: 1; -fx-border-color: blue;">
               <children>
                  <Label text="Параметры игры">
                     <font>
                        <Font size="15.0" />
                     </font>
                  </Label>
                  <HBox prefHeight="100.0" prefWidth="200.0">
                     <children>
                        <VBox alignment="CENTER" prefHeight="200.0" prefWidth="130.0" spacing="5.0">
                           <children>
                              <Label prefHeight="40.0" text="Количество игроков" textAlignment="CENTER" wrapText="true" />
                              <Label text="Server IP" wrapText="true" />
                              <Label alignment="CENTER" contentDisplay="CENTER" text="Server Port" wrapText="true" />
                           </children>
                        </VBox>
                        <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" spacing="5.0">
                           <children>
                              <Label fx:id="player_num_label_cp" prefHeight="40.0" text="4" />
                              <Label fx:id="ip_label_cp" text="localhost" />
                              <Label fx:id="port_label_cp" text="4444" />
                           </children>
                        </VBox>
                     </children>
                  </HBox>
               </children>
            </VBox>
            <VBox fx:id="connection_vbox" alignment="TOP_CENTER" fillWidth="false" prefWidth="100.0" style="-fx-border-width: 1; -fx-border-color: brown;">
               <children>
                  <Label text="Подключение игроков">
                     <font>
                        <Font size="15.0" />
                     </font>
                  </Label>
               </children>
            </VBox>
            <Button fx:id="start_button_cp" disable="true" mnemonicParsing="false" text="Начать игру" wrapText="true" />
         </children>
         <padding>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </padding>
      </VBox>
   </children>
</fx:root>
