<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<fx:root prefHeight="400.0" prefWidth="600.0" type="javafx.scene.layout.AnchorPane" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" spacing="10.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
             <HBox alignment="CENTER_LEFT" prefHeight="25.0" prefWidth="200.0" spacing="20.0">
                 <children>
                     <Label text="Login" textAlignment="CENTER" wrapText="true" />
                     <TextField fx:id="login_text_field" promptText="Марк-дурак" />
                 </children>
             </HBox>
            <HBox alignment="CENTER_LEFT" prefHeight="25.0" prefWidth="200.0" spacing="10.0">
               <children>
                  <Label text="Server IP" textAlignment="CENTER" wrapText="true" />
                  <HBox alignment="BOTTOM_CENTER" fillHeight="false" prefHeight="150.0" prefWidth="200.0">
                     <children>
                        <TextField fx:id="ip1_text_field" />
                        <Label text="." />
                         <TextField fx:id="ip2_text_field" />
                         <Label text="." />
                         <TextField fx:id="ip3_text_field" />
                         <Label text="." />
                         <TextField fx:id="ip4_text_field" />
                     </children>
                  </HBox>
                  <CheckBox fx:id="localhost_check_box" mnemonicParsing="false" text="localhost" />
               </children>
            </HBox>
             <HBox alignment="CENTER_LEFT" prefHeight="25.0" prefWidth="200.0" spacing="20.0">
                 <children>
                     <Label text="Server Port" textAlignment="CENTER" wrapText="true" />
                     <TextField fx:id="port2_text_field" promptText="4444" />
                 </children>
             </HBox>
            <Button fx:id="connect_button" disable="true" mnemonicParsing="false" text="Подключиться" />
         </children>
         <padding>
            <Insets bottom="5.0" left="100.0" right="50.0" top="5.0" />
         </padding>
      </VBox>
   </children>
</fx:root>
