<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<fx:root prefHeight="400.0" prefWidth="600.0" type="javafx.scene.layout.AnchorPane" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="20.0">
               <children>
                  <Label text="Server ip:" />
                  <Label fx:id="ip_label" text="Label" />
               </children>
            </HBox>
            <HBox alignment="CENTER_LEFT" prefHeight="100.0" prefWidth="200.0" spacing="20.0">
               <children>
                  <Label text="Server Port" textAlignment="CENTER" wrapText="true" />
                  <TextField fx:id="port_text_field" promptText="4444" />
                  <ImageView fx:id="check_image" fitHeight="50.0" fitWidth="50.0" pickOnBounds="true" preserveRatio="true" />
               </children>
            </HBox>
             <HBox alignment="CENTER_LEFT" prefHeight="100.0" prefWidth="200.0" spacing="20.0">
                 <children>
                     <Label text="Количество игроков: " textAlignment="CENTER" wrapText="true" />
                  <Slider fx:id="player_number_slider" blockIncrement="1.0" majorTickUnit="1.0" max="4.0" min="1.0" minorTickCount="0" showTickLabels="true" showTickMarks="true" snapToTicks="true" value="1.0" />
                 </children>
             </HBox>
             <HBox alignment="CENTER_LEFT" prefHeight="100.0" prefWidth="200.0" spacing="20.0">
                 <children>
                     <Label alignment="CENTER" text="Количество карт" textAlignment="CENTER" wrapText="true" />
                     <Slider fx:id="deck_size_slider" blockIncrement="1.0" majorTickUnit="1.0" max="8.0" min="1.0" minorTickCount="0" prefWidth="200.0" showTickLabels="true" showTickMarks="true" snapToTicks="true" value="1.0" />
                  <Label prefHeight="55.0" prefWidth="134.0" text="(считается в четвертях стандартной колоды)" textAlignment="CENTER" wrapText="true" />
                 </children>
             </HBox>
            <Button fx:id="start_button" disable="true" mnemonicParsing="false" text="Start" />
         </children>
         <padding>
            <Insets bottom="15.0" left="70.0" right="70.0" top="15.0" />
         </padding>
      </VBox>
   </children>
</fx:root>
