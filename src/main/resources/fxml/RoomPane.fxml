<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<fx:root prefHeight="400.0" prefWidth="600.0" type="javafx.scene.layout.AnchorPane" xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <VBox alignment="TOP_CENTER" prefHeight="200.0" prefWidth="100.0" spacing="5.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <Label fx:id="room_name_label_rp" text="Комната" wrapText="true">
               <font>
                  <Font name="Arial Black" size="30.0" />
               </font>
            </Label>
            <HBox alignment="CENTER" prefHeight="300.0" prefWidth="200.0" spacing="10.0">
               <children>
                  <AnchorPane fx:id="chat_pane_rp" prefHeight="200.0" prefWidth="5000.0" style="-fx-border-width: 1; -fx-border-color: black;">
                     <padding>
                        <Insets bottom="3.0" left="3.0" right="3.0" top="3.0" />
                     </padding>
                  </AnchorPane>
                  <VBox alignment="TOP_CENTER" fillWidth="false" prefWidth="5000.0" spacing="10.0">
                     <children>
                        <VBox alignment="TOP_CENTER" prefHeight="200.0" prefWidth="5000.0" style="-fx-border-width: 1; -fx-border-color: black; -fx-background-color: rgb(255,255,255,0.6);">
                           <children>
                              <Label text="Список игроков">
                                 <font>
                                    <Font size="15.0" />
                                 </font>
                              </Label>
                              <VBox fx:id="connection_vbox" alignment="TOP_CENTER" prefHeight="200.0" prefWidth="5000.0" />
                           </children>
                        </VBox>
                        <Button fx:id="ready_button_rp" disable="true" mnemonicParsing="false" text="Готов к игре" wrapText="true" />
                        <Button fx:id="back_button_rp" mnemonicParsing="false" text="Выйти из комнаты" />
                     </children>
                     <padding>
                        <Insets bottom="3.0" left="3.0" right="3.0" top="3.0" />
                     </padding>
                  </VBox>
               </children>
            </HBox>
         </children>
         <padding>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </padding>
      </VBox>
   </children>
</fx:root>
